{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category</h1>

<table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if category.createdAt %}{{ category.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if category.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
<div class="col-md-2">            <a class="btn btn-warning"  href="{{ path('category_index') }}">Back to the list</a>
</div>
    <div>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
    </div>
{% endblock %}
